@model  IEnumerable<ScotiaSuppliersAdmin.Models.product>
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Scotia Suppliers Admin</title>
    <meta name="description" content="">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://fonts.googleapis.com/css?family=Droid+Serif:400i|Source+Sans+Pro:300,400,600,700" rel="stylesheet">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-alpha.5/css/bootstrap.min.css" integrity="sha384-AysaV+vQoT3kOAXZkl02PThvDr8HYKPZhNT5h/CXfBThSRXQ6jW5DO2ekP5ViFdi" crossorigin="anonymous">
    <link href="~/Design/Index/css/themefisher-fonts.css" rel="stylesheet" />
    <link href="~/Design/Index/css/font-awesome.min.css" rel="stylesheet" />
    <link href="~/Design/Index/css/owl.carousel.css" rel="stylesheet" />
    <link href="~/Design/Index/css/animate.css" rel="stylesheet" />
    <link href="~/Design/Index/css/style.css" rel="stylesheet" />
    <link href="~/Design/Index/css/responsive.css" rel="stylesheet" />
</head>
<body id="body">
    <section id="service" class="service section">
        <div class="container">
            <div class="row">
                <div class="heading wow fadeInUp">
                    <h2>Sony</h2>
                    <div class=add-rest>
                        <button class="add"><img src="~/Design/Index/images/add.png" /></button>
                        <button class="rest"><img src="~/Design/Index/images/del.png" /></button>
                    </div>
                </div>
                @foreach (var x in Model)
                {
                    <div class="col-sm-6 col-md-3 wow fadeInLeft">
                        <div class="block">
                            <span class="tooltiptext">Cantidad de usuarios que redimieron este producto: 1384 <br /> Posibilidad de que este producto sea redimido: 63.61%</span>
                            <img src="@x.ImageUrl" style="width: 250px;" />
                            <h3>@x.Name</h3>
                            <p>@x.PointsPrice Puntos</p>
                        </div>
                    </div>
                }
            </div>
        </div>
    </section>
    <script src="~/Design/Index/js/vendor/jquery-2.1.1.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/tether/1.3.7/js/tether.min.js" integrity="sha384-XTs3FgkjiBgo8qjEjBk0tGmf3wPrWtA6coPfQDfFEY8AnYJwjalXCiosYRBIBZX8" crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-alpha.5/js/bootstrap.min.js" integrity="sha384-BLiI7JTZm+JWlgKa0M0kGRpJbF2J8q+qreVrKBC47e3K6BW78kGLrCkeRX6I9RoK" crossorigin="anonymous"></script>
    <script src="~/Design/Index/js/vendor/modernizr-2.6.2.min.js"></script>
    <script src="~/Design/Index/js/jquery.lwtCountdown-1.0.js"></script>
    <script src="~/Design/Index/js/owl.carousel.min.js"></script>
    <script src="~/Design/Index/js/jquery.validate.min.js"></script>
    <script src="~/Design/Index/js/jquery.form.js"></script>
    <script src="~/Design/Index/js/jquery.nav.js"></script>
    <script src="~/Design/Index/js/wow.min.js"></script>
    <script src="~/Design/Index/js/main.js"></script>
</body>
</html>
